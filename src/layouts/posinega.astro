---
// filename reference https://www.youtube.com/watch?v=Iq3EZtD0QDE
import Head from '../components/head.astro'
import '../styles/main.css'
const { title = 'azrd' } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<Head title={title}><slot name="head" /></Head>
	<body>
		{/*
			NOTE: the reason for this overly complex layout is because i dont want
			the navbar to have transparent gaps, so when scrolling the page
			anything that overflows will be covered by the navbar background
		*/}
		<div id="page">
			<slot name="header" />
			<div id="content">
				<slot />
			</div>
		</div>
		<script is:inline>
			const theme_btn = document.querySelector(`input[value='${theme}']`);
			if (theme_btn) theme_btn.checked = true;
		</script>
	</body>
</html>

<style is:global>
	html {
		background-color: var(--bg); /* mobile nav button bg */
		scrollbar-width: thin;
		scrollbar-color: var(--secondary) var(--bg-secondary);
		overflow-y: scroll;
	}

	body {
		background-color: var(--bg-secondary);
		font-family: var(--font-subset);
		display: flex;
		justify-content: center;
		margin: 0;
		color: var(--secondary);
	}

	#page {
		background-color: var(--bg);
		line-height: 1.5;
		width: 100%;
		max-width: 80ch;
		min-height: 100svh;
		/* firefox and safari doesnt support pretty */
		text-wrap: balance;
		text-wrap: pretty;
		hyphens: auto;
	}

	#content {
		padding: 0 2ch;
	}

	@media (width >= 900px) {
		body {
			&::before {
				border-right: 1px var(--bg-secondary);
				border-right-style: dashed;
			}

			&::after {
				border-left: 1px var(--bg-secondary);
				border-left-style: dashed;
			}

			&::before, &::after {
				z-index: 1;
				content: '';
				width: 3em;
				background-color: var(--bg);
				mask-image: url("../components/decoration.svg");
				mask-size: contain;
			}
		}
	}
</style>
