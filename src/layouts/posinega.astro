---
// filename reference https://www.youtube.com/watch?v=Iq3EZtD0QDE
import '../styles/main.css'
import { Font } from 'astro:assets'
const { title = 'azrd' } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="description" content="My personal webpage" />
		<Font cssVariable="--font-subset" />
		<link rel="icon" href="/favicon.ico" sizes="48x48" />
		<link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<script is:inline>document.documentElement.setAttribute("theme",localStorage.getItem("theme")||"system")</script>
		<title>{title}</title>
	</head>
	<body>
		<slot name="header" />
		<main>
			<div id="page"><slot /></div>
		</main>
		<div id="bg"><div/></div>
		<slot name="footer" />
	</body>
</html>

<style>
	html {
		font-family: "JetBrains Mono", var(--font-subset);
		scrollbar-color: var(--primary) var(--bg-secondary);
		overflow-y: scroll;
	}

	body {
		background-color: var(--bg-secondary);
		color: var(--secondary);
		display: flex;
		flex-direction: column;
		hyphens: auto;
		line-height: 1.65;
		margin: 0 auto;
		max-width: 90ch;
		min-height: 100svh;
		text-wrap: pretty;
		position: relative;
	}

	#page {
		min-width: 0;
		padding: 0 2ch 1rlh;
	}

	main {
		display: flex;
		flex-grow: 1;
		z-index: 1;
	}

	#bg {
		display: flex;
		position: absolute;
		width: 100%;
		height: 100%;

		div {
			width: 100%;
			background-color: var(--bg);
		}
	}

	@media (width >= 900px) {
		#bg {
			&::before {
				border-right: 1px var(--bg-secondary);
				border-right-style: dashed;
			}

			&::after {
				border-left: 1px var(--bg-secondary);
				border-left-style: dashed;
			}

			&::before, &::after {
				flex-shrink: 0;
				content: '';
				width: 5ch;
				background-color: var(--bg);
				mask-image: url("../components/decoration.svg");
				mask-size: contain;
			}
		}

		main {
			&::before, &::after {
				flex-shrink: 0;
				content: '';
				width: 5ch;
			}
		}
	}

	@media (scripting: none) {
		.js {
			display: none !important;
		}
	}
</style>
