<script>
	const select = document.querySelector<HTMLSelectElement>("#theme-select");
	const motion_ok = window.matchMedia('(prefers-reduced-motion: no-preference)').matches;

	const set_theme = (theme: string) => {
		document.documentElement.setAttribute("theme", theme);
		localStorage.setItem("theme", theme);
	}

	if (!select) throw new Error("Theme selector missing")
	select.value = localStorage.getItem("theme") || "system";
	select.addEventListener("change", async () => {
		if (!document.startViewTransition || !motion_ok) {
			set_theme(select.value); return
		}
		document.startViewTransition({
			update: () => set_theme(select.value),
			types: ['theme']
		})
	});
</script>

